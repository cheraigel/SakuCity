<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:id="@+id/relativelayout">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:id="@+id/song_image"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.AppCompatSpinner
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:id="@+id/dropdown_options_spinner"
            android:soundEffectsEnabled="true"
            android:addStatesFromChildren="true"
            android:layout_below="@+id/song_image"
            android:dropDownSelector="@drawable/song_namebackgroung"/>


    <TextView
            android:id="@+id/textdisplayspinnercontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/options_to_choose"
            android:layout_toRightOf="@+id/dropdown_options_spinner"
            android:layout_toEndOf="@+id/dropdown_options_spinner"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
        android:layout_below="@+id/song_image"/>

    <TextView
        android:id="@+id/song_name"
        android:layout_width="340dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/song_namebackgroung"
        android:hint="@string/song_name_here"
        android:layout_below="@+id/dropdown_options_spinner"/>

    <TextView
        android:id="@+id/song_bywho"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_below="@+id/song_name"
        android:layout_alignStart="@+id/dropdown_options_spinner"
        android:layout_alignLeft="@+id/dropdown_options_spinner"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:background="@drawable/song_namebackgroung"
        android:hint="@string/song_name_here" />


    <android.support.v7.widget.CardView
        android:layout_width="96dp"
        android:layout_height="48dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="@color/colorAccent7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/song_bywho">
        <TextView
            android:id="@+id/play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textAlignment="center"/>

    </android.support.v7.widget.CardView>
</RelativeLayout>