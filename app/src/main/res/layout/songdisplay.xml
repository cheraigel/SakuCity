<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    android:id="@+id/linearlayoutmain">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="120dp"
            app:cardElevation="4dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/colorAccent7"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="56dp"
                    android:id="@+id/song_image"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/monkey_shoulder"
                    android:contentDescription="@string/this_the_logo"
                    />

                <TextView
                    android:id="@+id/song_title"
                    android:layout_width="110dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/song_image"
                    android:hint="@string/song_name_here"
                    android:background="@drawable/song_namebackgroung"/>

                <TextView
                    android:id="@+id/song_genre"
                    android:layout_width="110dp"
                    android:layout_height="26dp"
                    android:layout_alignStart="@id/song_title"
                    android:layout_below="@id/song_title"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/song_namebackgroung"
                    android:hint="@string/song_genre" />

                <TextView
                    android:id="@+id/song_bywho"
                    android:layout_width="110dp"
                    android:layout_height="26dp"
                    android:layout_below="@+id/song_genre"
                    android:layout_alignStart="@+id/song_title"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/song_namebackgroung"
                    android:hint="@string/artist_name" />


                <TextView
                    android:id="@+id/play"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/play"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="2dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>