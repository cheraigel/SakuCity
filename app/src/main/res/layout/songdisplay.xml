<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:id="@+id/relativelayout">

    <android.support.v7.widget.AppCompatSpinner
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:id="@+id/dropdown_options_spinner"
            android:soundEffectsEnabled="true"
            android:addStatesFromChildren="true"
            android:dropDownSelector="@drawable/song_namebackgroung"/>

    <TextView
            android:id="@+id/textdisplayspinnercontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/options_to_choose"
            android:layout_toRightOf="@+id/dropdown_options_spinner"
            android:layout_toEndOf="@+id/dropdown_options_spinner"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/song_name"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/song_namebackgroung"
        android:hint="@string/song_name_here" />

    <TextView
        android:id="@+id/song_bywho"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_below="@+id/song_name"
        android:layout_alignStart="@+id/dropdown_options_spinner"
        android:layout_alignLeft="@+id/dropdown_options_spinner"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="118dp"
        android:background="@drawable/song_namebackgroung"
        android:hint="@string/song_name_here" />

    <Button
        android:id="@+id/play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_bywho"
        android:layout_alignParentStart="true"
        android:layout_marginTop="190dp"
        android:text="@string/play"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

</RelativeLayout>